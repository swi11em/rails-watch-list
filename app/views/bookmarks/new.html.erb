<div class="col-6 m-auto p-5">
  <div class="flat-form">
    <h1>Add movie to list</h1>
    <div class="mt-3">
      <%= simple_form_for([@list, @bookmark]) do |f| %>
        <%= f.input :comment, input_html: { class: 'form-control' }, label_html: { class: 'form-label' } %>
        <%= f.input :movie_id, collection: Movie.all, prompt: "Choose a movie", label: "Movie" %>
        <%= f.button :submit, "Add movie", class: 'btn btn-primary mt-3' %>
      <% end %>
    </div>
  </div>
</div>

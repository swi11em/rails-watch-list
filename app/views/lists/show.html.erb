<div class="map" style="background-image: url('https://plus.unsplash.com/premium_photo-1682125771198-f7cbed7cb868?q=80&w=2920&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D'); height: 400px; background-size: cover;"></div>
<div class="container margin-top-negative p-5">
<h1><%= @list.name %></h1>
  <div class="row">
    <div class="col-8">
      <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
        <div class="col-md-4">
            <div class=" card flat-card">
                <img class="card-img-top" src= <%= bookmark.movie.poster_url %>>
                <div class="flat-card-content px-4">
                    <div class="card-title">
                        <h4 class="py-2"><%= bookmark.movie.title %></h4>
                    </div>
                    <p><%= bookmark.movie.overview %></p>
                    <p><%= link_to "Remove", bookmark_path(bookmark), class: "ms-3 text-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></p>
                </div>
                <div class="flat-card-actions d-flex justify-content-between p-4">
                </div>
            </div>
        </div>
        <% end %>
      </div>
    </div>


  <div class="col-4">
    <div class="flat-form">
    <h1>Add movie to list</h1>
    <div class="mt-3">
      <%= simple_form_for([@list, @bookmark]) do |f| %>
        <%= f.input :comment, input_html: { class: 'form-control' }, label_html: { class: 'form-label' } %>
        <%= f.input :movie_id, collection: Movie.all, prompt: "Choose a movie", label: "Movie" %>
        <%= f.button :submit, "Add movie", class: 'btn btn-primary mt-3' %>
      <% end %>
    </div>
  </div>
</div>
